{% extends 'template.html.twig' %}

{% block main %}
    <div class="container grid grid-cols-12 items-start pb-16 pt-4 gap-6">

        <div class="col-span-8 border border-gray-200 p-4 rounded">
            <h3 class="text-lg font-medium capitalize mb-4">Checkout</h3>
            <form id="checkoutForm">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="first-name" class="text-gray-600">First Name <span
                                    class="text-primary"></span></label>
                        <input type="text" name="first-name" id="first-name" class="input-box">
                    </div>
                    <div>
                        <label for="last-name" class="text-gray-600">Last Name <span
                                    class="text-primary"></span></label>
                        <input type="text" name="last-name" id="last-name" class="input-box">
                    </div>
                </div>
                <div>
                    <label for="address" class="text-gray-600">Street address</label>
                    <input type="text" name="address" id="address" class="input-box">
                </div>
                <div>
                    <label for="region" class="text-gray-600">Country/Region</label>
                    <input type="text" name="region" id="region" class="input-box">
                </div>
                <div>
                    <label for="city" class="text-gray-600">City</label>
                    <input type="text" name="city" id="city" class="input-box">
                </div>
                <div>
                    <label for="phone" class="text-gray-600">Phone number</label>
                    <input type="text" name="phone" id="phone" class="input-box">
                </div>
                <div>
                    <label for="email" class="text-gray-600">Email address</label>
                    <input type="email" name="email" id="email" class="input-box">
                </div>
            </form>

        </div>

        <div class="col-span-4 border border-gray-200 p-4 rounded w-max">
            <div class="overflow-x-auto">
                    <h2 class="text-2xl border border-gray-300 text-center py-2">Order Summary</h2>
                <table class="min-w-full bg-white shadow-md rounded-xl">
                    <thead>
                    <tr class="bg-blue-gray-100 text-gray-700">
                        <th class="py-3 mx-3 px-8 text-center">Item</th>
                        <th class="py-3 mx-3 px-8 text-center">Price</th>
                        <th class="py-3 mx-3 px-8 text-center">Quantity</th>
                        <th class="py-3 mx-3 px-8 text-center">Total</th>

                        <th class="py-3 mx-3 px-8 text-center">x</th>

                    </tr>
                    </thead>
                    <tbody class="text-blue-gray-900" id="table_grid">



                        <td class="py-3 px-4">
                            <button><img src="/public/images/icons/removeItem.svg" alt="X" class="h-6 h-6"></button>
                        </td>

                    </tr>




                    </tbody>
                </table>
            </div>
            <form action="">
                <button id="submitButton"
                        class="block w-full py-3 px-4 text-center text-white bg-primary border border-primary rounded-md hover:bg-transparent hover:text-primary transition font-medium">Place
                    order</button>
            </form>
            <div class="text-center text-green-600 flex w-full justify-center pt-4">
        <a href="?route=home">Return to Shop</a>
            </div>
        </div>
    </div>


{% endblock %}

{% block footer %}
{% endblock %}
{% block scripts %}
    <script src="js/showTest.js"></script>
    <script src="js/localStorageHandler.js"></script>
    <script src="js/checkoutHandler.js"></script>
    <script src="js/formValidation.js"></script>
{% endblock %}